{
  "compilerOptions": {
    "lib": ["esnext", "esnext.asynciterable"],
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["dist"]
}
